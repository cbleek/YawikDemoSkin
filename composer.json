{
    "type": "yawik-module",
    "name": "yawik/demo-skin",
    "description": "demo-skin modifies the startpage of a yawik installation.",
    "license": "MIT",
    "authors": [
        {
            "name": "Carsten Bleek",
            "email": "bleek@cross-solution.de"
        },
        {
            "name": "Mathias Gelhausen",
            "email": "gelhausen@cross-solution.de"
        },
        {
            "name": "Anthonius Munthi",
            "email": "me@itstoni.com"
        }
    ],
    "keywords": [
        "yawik"
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
	"yawik/application-pack":">=0.32@dev",
        "yawik/composer-plugin": "^0.32@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "yawik/behat": "~0.32@dev"
    },
    "autoload": {
        "psr-4": {
            "YawikDemoSkin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "": "test/"
        }
    },
    "config": {
        "platform": {
            "ext-mongo": "1.6.16"
        },
        "process-timeout": 0
    },
    "scripts": {
        "auto-scripts": [
            "npm install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "serve": "php -S localhost:8000 -t test/sandbox/public",
        "start-selenium": "./vendor/bin/selenium-server-standalone -p 4444 -Dwebdriver.chrome.driver=./vendor/bin/chromedriver",
        "test": "phpunit"
    },
    "extra": {
        "zf": {
            "module": "YawikDemoSkin"
        },
        "branch-alias": {
            "dev-develop": "0.32-dev"
        }
    }
}
